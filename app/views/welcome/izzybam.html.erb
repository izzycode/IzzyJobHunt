<h1>Hi there</h1>

<div id="root">
    embeded area
</div>

<script src="https://cdn.auth0.com/js/lock-9.1.min.js"></script>

<script>
  var lock = new Auth0Lock('<%=ENV['AUTH0_ID']%>', 'izzy-code.auth0.com');

  lock.show({
      container: 'root'
    , callbackURL: "#{ENV['URL']}auth/auth0/callback"
    , responseType: 'code'
    , authParams: {
      scope: 'openid email'  // Learn about scopes: https://auth0.com/docs/scopes
    }
  });
</script>

<% if Rails.env.development? %>
  <%= link_to "FailsafeLogOut", "https://izzy-code.auth0.com/v2/logout?returnTo=#{ENV['URL']}logout", class:"btn btn-md btn-default" %>
<% end %>
