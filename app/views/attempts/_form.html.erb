<%= form_for(@attempt) do |f| %>
  <% if @attempt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attempt.errors.count, "error") %> prohibited this attempt from being saved:</h2>
      <ul>
      <% @attempt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.label :date %><br>
    <%= f.text_field :date, data:{provide:'datepicker'}, class:"form-control", id:"sandbox-container" %>
    <%= f.label :form_of_contact %><br>
    <%= f.text_field :medium, class:"form-control", placeholder:'e.g.: call, email ...' %>
    <%= f.label :summary %><br>
    <%= f.text_area :summary, class:"form-control" %><br />
    <% if !@attempt.job %>
      <%= f.text_field :job_id, value: params[:job_id], class:"form-control" %>
    <% else %>
      <%= f.text_field :job_id, value: @attempt.job_id , class:"form-control" %>
    <% end %>
    <%= f.submit "Submit", class:"btn btn-success" %>
<% end %>

<script>
$('#sandbox-container').datepicker({
    startDate: "01/01/2016",
    endDate: "01/01/2017",
    todayBtn: "linked",
    todayHighlight: true
});
</script>
